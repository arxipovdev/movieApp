@model MovieViewModel

<div class="movie">
    <div class="form-row">
        <div class="movie__name form-group col-md-6 col-sm-6 col-12">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly>
        </div>
    </div>
    <div class="form-row">
        <div class="movie__year form-group col-md-6 col-sm-6 col-12">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" readonly>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 col-sm-6 col-12">
            <label asp-for="ProducerId"></label>
            <select asp-for="ProducerId" class="form-control" readonly>
                @foreach (var producer in ViewBag.producers)
                {
                    <option value="@producer.Id">@producer.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-row">
        <div class="movie__description form-group col-md-6 col-sm-6 col-12">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="5" class="form-control" readonly></textarea>
        </div>
    </div>
    <div class="d-flex justify-content-center mb-2" style="max-width: 200px;">
        <img src="/uploads/@Model.Post" alt="@Model.Name" class="img-thumbnail">
    </div>
    <a class="btn btn-outline-secondary btn-sm" asp-controller="Home" asp-action="Index">Назад</a>
    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-outline-info btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a>
    }
</div>